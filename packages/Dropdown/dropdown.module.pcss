.dropdownContainer {
  @apply bg-surface-500 text-white;
  @apply w-full rounded;
}

.btnDropdown {
  @apply flex justify-between items-center outline-none py-1 px-3 w-full;
  @apply font-bold font-montserrat;
  &:hover { @apply bg-surface-800; }
  &:focus { @apply outline-none shadow-secondary-200 bg-surface-800; }
}