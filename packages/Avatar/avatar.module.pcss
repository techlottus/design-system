.avatar {
  @apply relative;

  img {
    @apply w-full h-full relative rounded-full;
  }

  &ExtraSmall {
    @apply w-4 h-4;
  }

  &Small {
    @apply w-6 h-6;
  }

  &Medium {
    @apply w-8 h-8;
  }

  &Large {
    @apply w-10 h-10;
  }

  &ExtraLarge {
    @apply w-12 h-12;
  }

  &DoubleExtraLarge {
    @apply w-14 h-14;
  }
}