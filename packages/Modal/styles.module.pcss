.modal {
  @apply fixed w-full inset-0 z-9999 flex items-stretch justify-center;
  background-color: rgba(0, 0, 0, 0.25);

  &Dialog {
    @apply w-full relative max-w-2xl text-left flex flex-col overflow-hidden rounded p-7 max-h-full;
    @apply bg-white;
  }

  &Close {
    @apply top-0 right-0 cursor-pointer absolute mt-7 mr-7;
  }

  &Close:focus {
    @apply outline-none;
  }

}