{
  "name": "@exponentialeducation/toast",
  "version": "0.2.0-canary.2",
  "description": "A React Toast component",
  "author": "Bedu Engineering <it@bedu.org>",
  "main": "lib/cjs/index.js",
  "module": "lib/esm/index.js",
  "esnext": "lib/esnext/index.js",
  "typings": "lib/esm/index.d.ts",
  "files": [
    "lib/"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/bedu-hq/betomic.git",
    "directory": "packages/toast"
  },
  "scripts": {
    "clean": "rm -rf dist/* && rm -rf lib/*",
    "prepublishOnly": "npm run compile",
    "compile": "npm run clean && npm run compile:esm && npm run compile:cjs && npm run compile:esnext",
    "compile:esm": "tsc -p ./src",
    "compile:cjs": "tsc -p ./src -m commonjs --outDir lib/cjs",
    "compile:esnext": "tsc -p ./src -t esnext --outDir lib/esnext",
    "test": "jest",
    "test:watch": "jest --watch",
    "jest:clearcache": "jest --clearCache"
  },
  "peerDependencies": {
    "react": ">= 16",
    "react-dom": ">= 16"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^5.14.1",
    "@testing-library/react": "^12.1.1",
    "@testing-library/user-event": "^13.2.1",
    "@types/jest": "^27.0.2",
    "jest": "^27.2.3",
    "ts-jest": "^27.0.5",
    "ts-node": "^10.2.1"
  },
  "dependencies": {
    "classnames": "^2.3.1",
    "react-hot-toast": "^2.1.1"
  },
  "publishConfig": {
    "access": "public"
  },
  "gitHead": "9aee86c05c5c90515ab4c6a9e92c6b39dd7d2d26"
}
